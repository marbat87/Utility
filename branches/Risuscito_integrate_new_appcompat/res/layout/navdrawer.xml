		<LinearLayout
			android:id="@+id/navdrawer_items_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" />

<!-- 	</com.gc.materialdesign.views.ScrollView> -->
	</LinearLayout>
      
