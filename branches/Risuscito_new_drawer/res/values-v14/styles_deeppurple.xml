<resources xmlns:android="http://schemas.android.com/apk/res/android">
  
    <style name="DeepPurpleLight" parent="@style/DeepPurpleV14Light" />
    
	<style name="DeepPurpleV14Light" parent="@style/DeepPurpleBaseLight">
	   	<item name="android:homeAsUpIndicator">@drawable/ic_action_arrow_left</item>
	    <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
	    <item name="android:actionMenuTextColor">@android:color/white</item>
	    <item name="android:actionBarItemBackground">@drawable/selectable_background_action_bar_deeppurple_light</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Action_bar_deeppurple_light</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Action_bar_deeppurple_light</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Action_bar_deeppurple_light</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Action_bar_deeppurple_light</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Action_bar_deeppurple_light</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_action_bar_deeppurple_light</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_action_bar_deeppurple_light</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Action_bar_deeppurple_light</item>
    </style>

    <style name="ActionBar.Solid.Action_bar_deeppurple_light" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_action_bar_deeppurple_light</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_action_bar_deeppurple_light</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_action_bar_deeppurple_light</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Action_bar_deeppurple_light</item>
    	<item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
    </style>

    <style name="ActionBar.Transparent.Action_bar_deeppurple_light" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_action_bar_deeppurple_light</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Action_bar_deeppurple_light</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Action_bar_deeppurple_light.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Action_bar_deeppurple_light</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Action_bar_deeppurple_light</item>
    </style>
    
