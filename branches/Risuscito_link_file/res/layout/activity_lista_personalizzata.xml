<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="@dimen/activity_min_margin"
    android:paddingLeft="@dimen/activity_min_margin"
    android:paddingRight="@dimen/activity_min_margin"
    android:paddingBottom="@dimen/activity_min_margin"
    android:orientation="vertical"
    android:weightSum="1.0"
    tools:context=".ListaPersonalizzataFragment" >
    
    <ScrollView 
        android:layout_width="fill_parent"
    	android:layout_height="0dp"
    	android:layout_weight="0.99"
    	android:orientation="vertical">
    	
   	<LinearLayout
   	    android:id="@+id/listaScroll"
   	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
        android:orientation="vertical" />
		   		    
	</ScrollView>
	   	
  	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:orientation="horizontal" >
    
  		<Button
	        android:id="@+id/button_resetListPers"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="@string/button_clean_list" />   
	  	
	</RelativeLayout>
	
</LinearLayout>