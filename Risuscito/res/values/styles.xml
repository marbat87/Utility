<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppThemeLight" parent="@style/Holo.Theme.Light">
    	<item name="customAbout">@drawable/ic_action_about_dark</item>
	    <item name="customChord">@drawable/ic_action_content_chord_dark</item>
	    <item name="customEdit">@drawable/ic_action_content_edit_dark</item>
	    <item name="customNew">@drawable/ic_action_content_new_dark</item>
	    <item name="customFavorite">@drawable/ic_action_favorite_dark</item>
	    <item name="customHelp">@drawable/ic_action_help_dark</item>
	    <item name="customDelete">@drawable/ic_action_list_delete_dark</item>
	    <item name="customSettings">@drawable/ic_action_settings_dark</item>
	    <item name="customShare">@drawable/ic_action_share_dark</item>
	    <item name="customReset">@drawable/ic_action_tab_reset_dark</item>
		<item name="customSave">@drawable/ic_action_tab_save_dark</item>
		<item name="customStar">@drawable/star</item>
		<item name="customSaveFile">@drawable/save_music_icon</item>
		<item name="customDeleteFile">@drawable/delete_music_icon</item>
		<item name="customRewind">@drawable/rewind_icon</item>
		<item name="customPlay">@drawable/play_icon</item>
		<item name="customFF">@drawable/fast_forward_icon</item>
		<item name="customStop">@drawable/stop_icon</item>
		<item name="customNoSong">@drawable/ic_alerts_and_states_error</item>
		<item name="customBottomBarColor">@color/bottomBarLight</item>
		<item name="customSlidePlay">@drawable/ic_ic_action_slideshow_dark</item>
		<item name="customSlideStop">@drawable/ic_ic_action_slideshow_stop_dark</item>
		<item name="customExpPDF">@drawable/ic_action_pdf_dark</item>
    </style>
    
    <style name="AppThemeDark" parent="@style/Holo.Theme">
    	<item name="customAbout">@drawable/ic_action_about</item>
	    <item name="customChord">@drawable/ic_action_content_chord</item>
	    <item name="customEdit">@drawable/ic_action_content_edit</item>
	    <item name="customNew">@drawable/ic_action_content_new</item>
	    <item name="customFavorite">@drawable/ic_action_favorite</item>
	    <item name="customHelp">@drawable/ic_action_help</item>
	    <item name="customDelete">@drawable/ic_action_list_delete</item>
	    <item name="customSettings">@drawable/ic_action_settings</item>
	    <item name="customShare">@drawable/ic_action_share</item>
	    <item name="customReset">@drawable/ic_action_tab_reset</item>
		<item name="customSave">@drawable/ic_action_tab_save</item>
		<item name="customStar">@drawable/star_light</item>
		<item name="customSaveFile">@drawable/save_music_icon_light</item>
		<item name="customDeleteFile">@drawable/delete_music_icon_light</item>
		<item name="customRewind">@drawable/rewind_icon_light</item>
		<item name="customPlay">@drawable/play_icon_light</item>
		<item name="customFF">@drawable/fast_forward_icon_light</item>
		<item name="customStop">@drawable/stop_icon_light</item>
		<item name="customNoSong">@drawable/ic_alerts_and_states_error_light</item>
		<item name="customBottomBarColor">@color/bottomBarDark</item>
		<item name="customSlidePlay">@drawable/ic_action_slideshow</item>
		<item name="customSlideStop">@drawable/ic_action_slideshow_stop</item>
		<item name="customExpPDF">@drawable/ic_action_pdf</item>
    </style>

    <style name="AppThemeMixed" parent="@style/Holo.Theme.Light.DarkActionBar">
    	<item name="customAbout">@drawable/ic_action_about</item>
	    <item name="customChord">@drawable/ic_action_content_chord</item>
	    <item name="customEdit">@drawable/ic_action_content_edit</item>
	    <item name="customNew">@drawable/ic_action_content_new</item>
	    <item name="customFavorite">@drawable/ic_action_favorite</item>
	    <item name="customHelp">@drawable/ic_action_help</item>
	    <item name="customDelete">@drawable/ic_action_list_delete</item>
	    <item name="customSettings">@drawable/ic_action_settings</item>
	    <item name="customShare">@drawable/ic_action_share</item>
	    <item name="customReset">@drawable/ic_action_tab_reset</item>
		<item name="customSave">@drawable/ic_action_tab_save</item>
		<item name="customStar">@drawable/star</item>
		<item name="customSaveFile">@drawable/save_music_icon</item>
		<item name="customDeleteFile">@drawable/delete_music_icon</item>
		<item name="customRewind">@drawable/rewind_icon</item>
		<item name="customPlay">@drawable/play_icon</item>
		<item name="customFF">@drawable/fast_forward_icon</item>
		<item name="customStop">@drawable/stop_icon</item>
		<item name="customNoSong">@drawable/ic_alerts_and_states_error</item>
		<item name="customBottomBarColor">@color/bottomBarLight</item>
		<item name="customSlidePlay">@drawable/ic_ic_action_slideshow_dark</item>
		<item name="customSlideStop">@drawable/ic_ic_action_slideshow_stop_dark</item>
		<item name="customExpPDF">@drawable/ic_action_pdf</item>
    </style> 
  
    <style name="MyActionButton" parent="">
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:minWidth">@dimen/abc_action_button_min_width</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
    </style>
    
</resources>
