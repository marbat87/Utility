<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	<com.astuetz.PagerSlidingTabStrip
	    android:id="@+id/tabs"
	    android:background="?attr/customPstsIndicatorColor"
		app:pstsIndicatorColor="?attr/accentColor"
		app:pstsIndicatorHeight="2dp"
		app:pstsDividerColor="@android:color/transparent"
		app:pstsUnderlineColor="@android:color/transparent"
		app:pstsShouldExpand="true"
		app:pstsTabBackground="?attr/customTabBackground"
		app:pstsUnselectedTextColor="@color/unselectedTabTextColor"
	    app:pstsSelectedTextColor="@android:color/white"
	    android:layout_width="match_parent"
	    android:layout_height="48dip" />
	
	<org.holoeverywhere.widget.ViewPager
	    android:id="@+id/pager"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" />
	
	<EditText
        android:id="@+id/tempTextField"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="" />

</LinearLayout>
