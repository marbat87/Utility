<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_min_margin"
    android:paddingLeft="@dimen/activity_min_margin"
    android:paddingRight="@dimen/activity_min_margin"
    android:paddingTop="@dimen/activity_min_margin"
    tools:context=".Risuscito" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="top"
        android:layout_weight="0.6"
        android:contentDescription="@string/copertina"
        android:src="@drawable/copertina_border" />

 	<LinearLayout 
   		android:layout_width="fill_parent"
   		android:layout_height="0dip"
   		android:layout_weight="0.4"
		android:orientation="vertical"
    	android:gravity="center_vertical">
    
	    <Button
	        android:id="@+id/titleSearch"
	        android:layout_width="@dimen/button_length_vertical"
	        android:layout_height="@dimen/button_height_vertical"
	        android:layout_gravity="center_horizontal"
	        android:text="@string/search_name_text"
	        android:textSize="@dimen/button_text_size" />
	
	    <Button
	        android:id="@+id/generalIndex"
	        android:layout_width="@dimen/button_length_vertical"
	        android:layout_height="@dimen/button_height_vertical"
	        android:layout_gravity="center_horizontal"
	        android:text="@string/title_activity_general_index"
	        android:textSize="@dimen/button_text_size" />
	
	    <Button
	        android:id="@+id/predefinedLists"
	        android:layout_width="@dimen/button_length_vertical"
	        android:layout_height="@dimen/button_height_vertical"
	        android:layout_gravity="center_horizontal"
	        android:text="@string/title_activity_custom_lists"
	        android:textSize="@dimen/button_text_size" />
    
    </LinearLayout>

</LinearLayout>